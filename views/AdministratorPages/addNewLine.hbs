<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {{!-- <link rel="stylesheet" href="/Common/mainSchema.css"> --}}
    <link rel="stylesheet" href="/EditOffer/addNewLine.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.11.2/css/all.css"/>
    <!-- MDB -->
    <title>PrzejedźSię</title>
</head>
<body>
<div class="wrapper-main">
    <nav>
        <div class="logo">
            <img src="../Resources/logo.png">
        </div>
        <div class="menuList">
            <ul>
                <li id="active"><i class="fas fa-th-large"></i>Edytuj ofertę</li>
                <a href="/admin/timetable"><li><i class="fas fa-bus"></i>Rozkład</li></a>
            </ul>
        </div>
        <div class="menuButtons">
            <button onclick="location.href='/'" type="submit" class="btn"><i class="fas fa-sign-out-alt"></i>  Wyloguj się</button>
        </div>
    </nav>
    <div class="container">
        <div class="title"><h1>Dodaj nową linię</h1></div>
        <div class="response">
            <h2 id="res"></h2>
        </div>
        <div class="wrapp">
            <label for = "nrlin">Numer linii</label>
            <input id = "nrlin" type="number" min="1" max="1000" name="numerlinii" placeholder="503" class="box"
                   required/>
            <label>Typ transportu</label>
            <select id="typ" class="box" name="typtrans">
                <option value="autobus">Autobus</option>
                <option value="tramwaj">Tramwaj</option>
            </select>
            <label>Dodaj przystanek</label>
            <input type="text" class="bus_stop_name box" required/>
            <button class="add_bus_stop">+</button>
            <div class="wrapper">
            </div>
        </div>
        <div class="optionButtons">
            <button type="submit" id="cancelBtn" class="btn" onclick="location.href='/admin/editOffer'"></i>Anuluj</button>
            <button type="submit" id="saveBtn" class="btn"></i>Zatwierdź</button>
        </div>
    </div>
</div>

<script type="text/javascript" src="/Common/Sortable.js"></script>
<script src="/EditOffer/addNewLine.js"></script>
</body>
</html>